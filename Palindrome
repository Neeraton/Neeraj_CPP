package examples;

public class Palindrome_example {

	public static void main(String[] args) {
		int temp,r,sum=0;
		int n=545;
		System.out.print("Number is : "+n);
		temp=n;
		while(n>0)
		{
			r=n%10;
			sum=sum*10+r;
			n=n/10;
			
		}
		if(temp==sum)
		{
			System.out.println("\n\nNumber is Palindrome");
		}
		else
		{
			System.out.println("Number is Not Palindrome");
		}

	}

}
